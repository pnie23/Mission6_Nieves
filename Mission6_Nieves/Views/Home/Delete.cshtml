@{
}
@{
    ViewData["Title"] = "Deletion Confirmation";
}

<!-- Deletion Confirmation Page -->
@model FilmSubmission

<br /><br />
<div class="form-container" style="text-align: center">
    <h2>Confirm Deletion:</h2>
    <br />
    <h3>Remove "@Model.Title" from the Film Collection?</h3>
    <br />
    <form method="post">
        <input type="hidden" asp-for="MovieId" />
        <button class="btn btn-danger" type="submit">Delete</button>
        <a class="btn btn-outline-dark" asp-controller="Home" asp-action="CollectionView">Cancel</a>
    </form>
</div>
<br /><br />