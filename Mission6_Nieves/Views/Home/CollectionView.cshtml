@{
}
@{
    ViewData["Title"] = "The Joel Hilton Film Collection";
}

@model List<FilmSubmission>

<br /><br />
<h2>Joel Hilton's Film Collection</h2>
<br /><br />
<table class="table table-bordered table-light">
    <thead class="fw-bold table-active">
        <tr>
            <td>Category</td>
            <td>Title</td>
            <td>Year</td>
            <td>Director</td>
            <td>Rating</td>
            <td>Edited</td>
            <td>LentTo</td>
            <td>CopiedToPlex</td>
            <td>Notes</td>
            <td></td>
            <td></td>
        </tr>
    </thead>

    @foreach (var x in Model)
    {
        <tbody>
            <tr>
                <!-- Show Category Name rather than ID in table !-->
                <!-- Since the category is not required, if it missing a category, it is replaced with No Category rather than null for the web view table -->
                <td>@(x.Category?.CategoryName ?? "No Category")</td>
                <td>@x.Title</td>
                <td>@x.Year</td>
                <td>@x.Director</td>
                <td>@x.Rating</td>
                <td>@x.Edited</td>
                <td>@x.LentTo</td>
                <td>@x.CopiedToPlex</td>
                <td>@x.Notes</td>

                <td><a class="btn btn-outline-dark" asp-controller="Home" asp-action="Edit" asp-route-id="@x.MovieId">Edit</a></td>
                <td><a class="btn btn-danger" asp-controller="Home" asp-action="Delete" asp-route-id="@x.MovieId">Delete</a></td>
            </tr>
        </tbody>
    }
</table>
<br />